<%= form_with model: @post, local: true do |form| %>

  <div class="form-group">
    <p><%= form.label :title, "タイトル" %><%= form.text_field :title, autofocus: true, autocomplete: 'title', class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <p><%= form.label :content, "内容" %><%= form.text_field :content , autofocus: true, autocomplete: 'content', class: 'form-control'%></p>
  <div>

    <p><%= form.file_field :image , accept: "image/png,image/jpeg,image/gif" %></p>
    <%= form.submit button_value, class: "btn btn-primary btn-block" %>
  <% end %>