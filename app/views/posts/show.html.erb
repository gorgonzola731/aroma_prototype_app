<div class="wrapper">
  <div class="contents-title text-center py-3">
    <h1>everyone&apos;s aroma</h1>
  </div>

<div class="detail">

      <h3><%= @post.title %></h3>
      <h3><%= @post.content %></h3>
        <% if @post.image? %>
          <%= image_tag @post.image.url %>
        <% end %>
      <div class="likecount">
        <p><i class="fas fa-heart"></i>:<%= @post.likes.count %></p>
      </div>
      <% if current_user.already_liked?(@post) %>
        <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
      <% else %>
        <%= button_to 'いいね', post_likes_path(@post) %>
      <% end %>
      <h2>いいねしたユーザー</h2>
      <% @post.liked_users.each do |user| %>
        <li><%= user.nickname %></li>
      <% end %>

      <%= form_for [@post, @comment] do |f| %>
        <%= f.text_area :comment, size: "40x5" %>
        <%= f.submit '送信', class: "btn-sm btn-primary" %>
      <% end %>
</div>
<table>
  <thead>
    <tr>
      <th>コメント投稿者</th>
      <th>コメント内容</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.nickname %></td>
        <td><%= comment.comment %></td>
        <td><%= link_to "削除", post_comment_path(@post, comment), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "ホームへ戻る", posts_path %>
</div>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>nickname</th>
      <th>title</th>
      <th>content</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">kensuke</th>
      <td>Mark</td>
      <td>Otto</td>
    </tr>
  </tbody>
</table>